<!-- igvc.launch -->
<!--
    This file will launch all launch files necessary to run the robot in
    a competition run.
    -->
<launch>
    <!-- sensors -->
    <include file="$(find igvc)/launch/sensors.launch" />

    <!-- center line detector -->
    <include file="$(find igvc)/launch/center_line_detector.launch" />

    <!-- pot hole detector -->
    <include file="$(find igvc)/launch/pothole_detector.launch" />

    <!-- mapper -->
    <include file="$(find igvc)/launch/mapper.launch" />

    <!-- pather -->
    <include file="$(find igvc)/launch/pather.launch" />

    <!-- not included yet are odometer.launch, localization.launch, side
         cameras, side linedetectors. They are not currently required -->

</launch>
